@model IEnumerable<ProyectoIIITrimProgramacion_Mecarap.Models.Estado>
@{
    ViewData["Title"] = " Estado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12 offset-md-4 col-md-4 text-center">
            <h1>Estado</h1>
        </div>
        <div class="col-12 col-md-4"></div>
        <div class="col-10 offset-1 offset-md-2 col-md-9 card">
            @if (Model.Count() > 0)
            {
                <div class="input-group mb-3">
                    <input type="text" list="listaBusqueda" class="form-control" placeholder="Descripción">
                    <button class="btn btn-outline-secondary" type="button">Buscar</button>
                    <datalist id="listaBusqueda">
                        @foreach (var estado in Model)
                        {
                            <option value="@estado.Descripcion"></option>
                        }
                    </datalist>
                </div>
                <div class="row p-1">
                    @foreach (var estado in Model)
                    {
                        <div class="col-12 col-md-4 d-flex justify-content-center p-1">
                            <div class="card" style="width: 18rem;">
                                <div class="card-body">
                                    <h5 class="card-title">@estado.Descripcion</h5>
                                    <a asp-controller="Estado" asp-action="Editar" asp-route-Id="@estado" class="btn btn-outline-warning">
                                        <p>Editar</p>
                                    </a>
                                    <a asp-controller="Estado" asp-action="Eliminar" asp-route-Id="@estado" class="btn btn-outline-danger">
                                        <p>Eliminar</p>
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="row p-1 text-center">
                    <p>No hay estados que mostrar</p>
                </div>
            }
        </div>
        <div class="col-1 col-md-1"></div>
    </div>
</div>
<div class="footer fixed-bottom">
    <div class="row">
        <div class="col-12 offset-md-11 col-md-1">
            <a class="btn btn-outline-primary m-1" asp-controller="Estado" asp-action="Guardar">
                Agregar &plus;
            </a>
        </div>
    </div>
</div>
