@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center container-fluid">
    <span class="fw-bolder fs-1 text-start">Bienvenido <span class="text-danger" id="nombreUsuarioBienvenida">Dylan</span></span>
    <div class="row">
       <div class="col-5">
            <span class="fs-5 fw-bold">Esta es su agenda</span>
           <div class="bg-light px-2 py-3 rounded-3">
               <span class="fw-normal ">Setiembre 2023</span>
           </div>
       </div>
        <div class="col-6 _bg-red px-3 py-5 rounded-3 ">
            <div class="d-flex ">
                <span class="fw-bolder text-light fs-4">Reparaciones</span>
                <input class="bg-light rounded-3 mx-3 fw-normal px-3 py-1 rounded-pill" type="text" placeholder="Escribe para buscar">
            </div>
            <div class="rounded-pill px-3 py-2">
                <div id="carouselExample" class="carousel slide">
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="..." class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="..." class="d-block w-100" alt="...">
                        </div>
                        <div class="carousel-item">
                            <img src="..." class="d-block w-100" alt="...">
                        </div>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
       </div>
    </div>
    <div class="row col-12 bg-light mt-5">
        <span class="fw-bold">Solicitudes pendientes</span>
    </div>
</div>