@model ProyectoIIITrimProgramacion_Mecarap.Models.TipoUsuario
<div class="row">
    <div class="col-12 offset-md-4 col-md-4 text-center mt-5">
        <h1>Editar Tipo Usuario</h1>
    </div>
    <div class="col-12 col-md-4"></div>
    <div class="col-10 offset-1 offset-md-2 col-md-9 card mt-4 shadow-lg">
        <form asp-action="Editar" asp-controller="TipoUsuario" method="post" class="m-5" enctype="multipart/form-data">
            <input asp-for="Descripcion" type="text" class="form-control m-1" placeholder="Descripcion" value="@Model.Descripcion"><br>
            <input class="form-control m-1" type="file"><br>
            <div class="d-flex justify-content-center align-items-center fw-bold">
                <a class="btn _bg-grey btn-confirm me-2" asp-controller="TipoUsuario" asp-action="Index">Cancelar</a>
                <button class="btn _bg-red btn-confirm">Guardar</button>
            </div>
        </form>
    </div>

    <div class="col-1 col-md-1"></div>
</div>